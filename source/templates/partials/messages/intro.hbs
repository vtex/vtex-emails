<tr>
  <td class="w-100 pl24-px pr24-px pt3 pb4">
    <div>
      <div class="f24-px fw7 gray-scale-900 pv40-px">
        Recebemos o seu pedido
      </div>
      <div class="pv12-px pb24-px color-success-500 f5 fw6">
        Agradecemos pela sua compra!
      </div>
    </div>
      <!-- partial:hi.hbs --><!-- partial -->
      ((i18n.order.introMessage))

    <!-- partial:order-link.hbs --><!-- partial -->

    <!-- Boleto bancário -->
    {{#each orders.0.paymentData.transactions}}
      {{#each payments}}
        {{#eq paymentSystemName 'Boleto Bancário'}}
          <p>((i18n.payment.bankInvoiceReminder))</p>
          <p>
            <a class="dib ph3 pv2 br2 white bg-green no-underline fw5" href="{{replace url '{Installment}' installments}}">((i18n.payment.bankInvoiceShow))</a>
          </p>
        {{/eq}}
      {{/each}}
    {{/each}}
  </td>
</tr>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional //EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:o="urn:schemas-microsoft-com:office:office" xmlns:v="urn:schemas-microsoft-com:vml">
  <!-- partial:partials/html-head.hbs --><!-- partial -->
	<body>
		<table id="body-table" width="100%" border="0" cellpadding="0" cellspacing="0">
			<tr>
				<td align="center" valign="top">
					<table class="w-100 mw6-5 mv4-ns bg-white" width="100%" align="center" border="0" cellpadding="0" cellspacing="0">

            <!-- Header -->
            <tr>
              <td class="w-100 ph4-ns pb4 bb b--light-gray tc">
								<!-- partial:partials/logo.hbs --><!-- partial -->

                <h1>((i18n.shipping.updateTitle))</h1>
								<!-- partial:partials/messages/order-reference.hbs --><!-- partial -->

								<!-- Last update highlighted -->
                {{#if package.courierStatus.data.0.lastChange}}
  								<div class="bg-light-gray ph3 pv2 mt4 dib w-70-ns center fw5 lh-copy">
  									<div class="mb1 fw7 gray">
  										{{formatDateTime package.courierStatus.data.0.lastChange}}
  									</div>
  									<div class="f4 fw7 lh-title">
  										{{package.courierStatus.data.0.description}}
  									</div>
  									{{#if package.courierStatus.data.0.city}}
  										<div class="f4">
  											{{package.courierStatus.data.0.city}}
  											{{#if package.courierStatus.data.0.state}} - {{package.courierStatus.data.0.state}}{{/if}}
  										</div>
  									{{/if}}
  								</div>
                {{/if}}
							</td>

            </tr>

            <tr>
              <td class="w-100 ph4-ns pb3">
								<!-- Intro message -->
                <p class="mt4">
                  <!-- partial:partials/messages/hi.hbs --><!-- partial -->
                  {{#compare package.courierStatus.data.length '>' 1}}
                    ((i18n.shipping.trackDelivery))
                  {{else}}
                    ((i18n.shipping.deliveryDetails))
                  {{/compare}}
                </p>

								<div class="pb3">
									{{#if package.courier}}
                  	<div class="fw7">((i18n.shipping.carrier)) {{package.courier}}</div>
									{{/if}}
                  <div>((i18n.shipping.track)) #{{package.trackingNumber}} - <a href="{{package.trackingUrl}}">((i18n.shipping.history))</a></div>
                </div>

                <!-- Histoty -->
                {{#compare package.courierStatus.data.length '>' 1}}
                  {{#each package.courierStatus.data}}
                    <div class="mb2">
                      <div class="f7 gray">
                        {{formatDateTime lastChange}}
                      </div>
                      <div>
                        {{description}}
                      </div>
                      {{#if city}}
                        <div>
                          {{city}}
                          {{#if state}} - {{state}}{{/if}}
                        </div>
                      {{/if}}
                    </div>
                  {{/each}}
                {{/compare}}
              </td>
            </tr>

            <!-- Order info -->
						<tr>
							<td class="w-100 ph4-ns pv4 bt b--light-gray">
                {{#richShippingData shippingData}}
                  {{#group logisticsInfo by="addessId"}}
                    <div class="cb fn">
                      <h3 class="ma0 mb2">((i18n.package.title))</h3>
                      <!-- Address info -->
                      <!-- partial:partials/address-delivery-no-title.hbs --><!-- partial -->
                      <!-- partial:partials/address-pickup-no-title.hbs --><!-- partial -->

                      {{#group items by="selectedSla"}}
                        <!-- partial:partials/package.hbs --><!-- partial -->
                      {{/group}}
                    </div>
                  {{/group}}
                {{/richShippingData}}
							</td>
						</tr>

            <tr>
              <td class="ph4-ns pv3 bt b--light-gray">
                <!-- partial:partials/messages/regards.hbs --><!-- partial -->
              </td>
            </tr>
					</table>
				</td>
			</tr>
		</table>
	</body>
</html>
